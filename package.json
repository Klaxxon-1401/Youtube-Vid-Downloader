{
  "name": "youtube-downloader-electron",
  "productName": "YTDownloader",
  "version": "1.0.0",
  "description": "A modern YouTube Video Downloader",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Dvn",
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.devan.ytdownloader",
    "files": [
      "src/**/*",
      "main.js",
      "logo.png"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Video",
      "executableName": "YTDownloader"
    },
    "win": {
      "target": "nsis",
      "executableName": "YTDownloader",
      "icon": "logo.png"
    }
  }
}